<html>
  <head>
    <title><%= yield :title %></title>
    <%= javascript_include_tag :defaults, :cache => "cache/all" %>
    <%= javascript_include_tag "rest_in_place" %>
    <script type="text/javascript">
        rails_authenticity_token = '<%= form_authenticity_token %>'
    </script>
	<%= stylesheet_link_tag "application.css", :media => "screen" %>
	<%= yield :header %>
	<style>
		body {
			background-color: <%=current_event.primary_color%>;
		}
	</style>
</head>
  <body>
    <div style="float:left;">
    <a href="<%=current_event.link_url%>"><img width="350px" src="<%=current_event.image_url%>" alt="<%=current_event.name%>" border="0" /></a></div>
    <ul>
        <li><a href="/iphone">iPhone edition</a></li>
        <li><a href="/mobile">Mobile edition</a> (no table)</li>
    </ul>
    <br clear="all"/>
	<p style="color: <%=current_event.secondary_color%>"><%= flash[:notice] %></p>
    <%= yield %>
  </body>
</html>
