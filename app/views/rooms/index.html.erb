<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Capacity</th>
  </tr>

<% for room in @rooms %>
  <tr>
    <td><%=h room.name %></td>
    <td><%=h room.location %></td>
    <td><%=h room.capacity %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

